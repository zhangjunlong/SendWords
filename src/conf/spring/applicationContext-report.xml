<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd"
	default-autowire="byName">


	<!-- Controller -->
	<bean id="reportController" class="com.openthinks.woms.report.rest.ReportController"
		scope="prototype" />

	<bean id="colorReportController" class="com.openthinks.woms.report.rest.ColorReportController"
		scope="prototype" />

	<bean id="seasonReportController" class="com.openthinks.woms.report.rest.SeasonReportController"
		scope="prototype" />

	<bean id="seriesReportController" class="com.openthinks.woms.report.rest.SeriesReportController"
		scope="prototype" />

	<bean id="styleReportController" class="com.openthinks.woms.report.rest.StyleReportController"
		scope="prototype" />

	<bean id="categoryReportController"
		class="com.openthinks.woms.report.rest.CategoryReportController"
		scope="prototype" />

	<bean id="modelReport" class="com.openthinks.woms.report.rest.ModelReportController"
		scope="prototype" />

	<bean id="sizeController" class="com.openthinks.woms.report.rest.SizeReportController"
		scope="prototype" />

	<!--Business -->
	<bean id="reportService" class="com.openthinks.woms.report.service.ReportServiceImpl" />
	<bean id="colorReportService"
		class="com.openthinks.woms.report.service.ColorReportServiceImpl" />
	<bean id="seasonReportService"
		class="com.openthinks.woms.report.service.SeasonReportServiceImpl" />
	<bean id="seriesReportService"
		class="com.openthinks.woms.report.service.SeriesReportServiceImpl" />
	<bean id="styleReportService"
		class="com.openthinks.woms.report.service.StyleReportServiceImpl" />
	<bean id="categoryReportService"
		class="com.openthinks.woms.report.service.CategoryReportServiceImpl" />
	<bean id="modelReportService"
		class="com.openthinks.woms.report.service.ModelReportServiceImpl" />
	<bean id="sizeReportService"
		class="com.openthinks.woms.report.service.SizeReportServiceImpl" />


	<!-- DAO -->
	<bean id="reportDao" class="com.openthinks.woms.report.dao.ReportDaoJpaImpl" />
	<bean id="colorReportDao" class="com.openthinks.woms.report.dao.ColorReportDaoJpaImpl" />
	<bean id="seasonReportDao" class="com.openthinks.woms.report.dao.SeasonReportDaoJpaImpl" />
	<bean id="seriesReportDao" class="com.openthinks.woms.report.dao.SeriesReportDaoJpaImpl" />
	<bean id="styleReportDao" class="com.openthinks.woms.report.dao.StyleReportDaoJpaImpl" />
	<bean id="categoryReportDao" class="com.openthinks.woms.report.dao.CategoryReportDaoJpaImpl" />
	<bean id="modelReportDao" class="com.openthinks.woms.report.dao.ModelReportDaoJdbcImpl" />
	<bean id="sizeReportDao" class="com.openthinks.woms.report.dao.SizeReportDaoJdbcImpl" />

</beans>